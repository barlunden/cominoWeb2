---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const allArticles = await getCollection('articles');
// Sorter artikler etter dato (nyeste først)
const sortedArticles = allArticles.sort((a, b) => 
  b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('nb-NO', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  }).format(date);
};
---

<Layout title="Artikler & Innsikt - Comino Web">
  <Navbar />
  <main class="bg-slate-50 min-h-screen pt-24 pb-20">
    <section class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h1 class="text-5xl font-bold text-slate-900 mb-6 tracking-tight">Artikler & Innsikt</h1>
        <p class="text-xl text-slate-600">
          Vi deler våre erfaringer om webutvikling, designstrategi og digital vekst.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-5xl mx-auto">
        {sortedArticles.length === 0 && (
          <p class="text-slate-500 text-center col-span-2 py-20 italic">
            Ingen artikler publisert ennå. Kommer snart!
          </p>
        )}

        {sortedArticles.map(article => (
          <article class="group bg-white rounded-3xl border border-slate-200 overflow-hidden hover:shadow-2xl transition-all duration-300 flex flex-col">
            <a href={`/artikler/${article.slug}`} class="block overflow-hidden aspect-video bg-slate-200">
              {article.data.image ? (
                <Image 
                  src={article.data.image} 
                  alt={article.data.title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
              ) : (
                <div class="w-full h-full bg-linear-to-br from-primary/20 to-blue-500/20 flex items-center justify-center">
                  <svg class="w-12 h-12 text-primary/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10l4 4v10a2 2 0 01-2 2z" />
                    <path stroke-width="1.5" d="M14 4v4h4" />
                  </svg>
                </div>
              )}
            </a>

            <div class="p-8 flex flex-col flex-1">
              <div class="flex items-center gap-4 mb-4 text-sm text-slate-500 font-medium">
                <time datetime={article.data.publishDate.toISOString()}>
                  {formatDate(article.data.publishDate)}
                </time>
                <span class="w-1 h-1 rounded-full bg-slate-300"></span>
                <span class="text-primary uppercase tracking-wider text-[10px] font-bold">
                  {article.data.tags[0]}
                </span>
              </div>

              <a href={`/artikler/${article.slug}`} class="block group-hover:text-primary transition-colors">
                <h2 class="text-2xl font-bold text-slate-900 mb-3 leading-tight">
                  {article.data.title}
                </h2>
              </a>
              
              <p class="text-slate-600 mb-6 flex-1 line-clamp-3">
                {article.data.description}
              </p>

              <a 
                href={`/artikler/${article.slug}`}
                class="inline-flex items-center text-primary font-bold hover:gap-2 transition-all"
              >
                Les hele artikkelen
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </section>
  </main>
  <Footer />
</Layout>