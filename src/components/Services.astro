---
// src/components/Services.astro
interface ServiceItem {
  title: string;
  desc: string;
  icon: string;
}

interface Props {
  items: ServiceItem[];
}

const { items } = Astro.props;
---

<section id="tjenester" class="py-24 bg-page-light dark:bg-page-dark transition-colors duration-500">
  <div class="container mx-auto px-6">
    <div class="max-w-2xl mb-16">
      <h2 class="text-4xl font-bold text-slate-900 dark:text-white mb-4 transition-colors italic">Våre tjenester</h2>
      <p class="text-lg text-slate-600 dark:text-slate-400 transition-colors">
        Vi leverer alt fra enkle nettsider til komplekse webapplikasjoner, 
        alltid med fokus på ytelse og brukervennlighet.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {items.map((item) => (
        <div class="group relative p-8 rounded-[2.5rem] border border-slate-200 dark:border-slate-800/60 bg-white dark:bg-slate-800/30 transition-all duration-300 hover:shadow-2xl dark:hover:shadow-primary/5 hover:border-primary/30 flex flex-col">
          
          <div class="mb-6 inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-blue-50 dark:bg-slate-800 text-primary dark:text-primary-light group-hover:bg-primary group-hover:text-white transition-all duration-300 shadow-sm shrink-0">
            {item.icon === 'code' && (
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5" />
              </svg>
            )}

            {item.icon === 'settings' && (
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12a7.5 7.5 0 1 1 15 0 7.5 7.5 0 0 1-15 0Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              </svg>
            )}

            {item.icon === 'users' && (
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
              </svg>
            )}
          </div>

          <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-4 group-hover:text-primary dark:group-hover:text-primary-light transition-colors">
            {item.title}
          </h3>
          
          <p class="text-slate-600 dark:text-slate-400 leading-relaxed grow">
            {item.desc}
          </p>
          
          {/* Link til meir innhald ved behov, må generere relevant innhald først */}
          {/* <div class="mt-8 flex items-center text-primary dark:text-primary-light font-bold opacity-0 group-hover:opacity-100 transition-all translate-y-2 group-hover:translate-y-0 shrink-0">
            Les mer
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div> */}
        </div>
      ))}
    </div>
  </div>
</section>