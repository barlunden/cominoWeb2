---
// src/components/PageHeader.astro
interface Props {
  preTitle?: string; // Valgfri tekst f√∏r hovedtittelen
  title: string;
  accentWord?: string;
  description: string;
}

const { preTitle, title, accentWord, description } = Astro.props;
---

<div transition:animate="fade" class="max-w-4xl mx-auto text-center mb-16 md:mb-24">
  <h1 class="text-5xl md:text-6xl font-extrabold text-slate-900 dark:text-white mb-6 tracking-tight leading-tight">
    {preTitle && <span class="block md:inline">{preTitle} </span>}
    {title} {accentWord && <span class="text-primary italic">{accentWord}</span>}
  </h1>
  <p class="text-lg md:text-xl text-slate-600 dark:text-slate-400 leading-relaxed max-w-2xl mx-auto font-medium">
    {description}
  </p>
</div>