---
// src/components/PageHeader.astro
interface Props {
  preTitle?: string;
  title: string;
  accentWord?: string;
  description: string;
}

const { preTitle, title, accentWord, description } = Astro.props;
---

<div 
  transition:animate="fade" 
  class="max-w-4xl mx-auto text-center mb-16 md:mb-24 px-4"
>
  <h1 class="text-5xl md:text-7xl font-bold text-slate-900 dark:text-white mb-6 tracking-tight leading-[1.1]">
    {preTitle && <span class="block text-xl md:text-2xl font-semibold text-primary dark:text-primary-light mb-4 tracking-wide uppercase">{preTitle}</span>}
    
    <span class="block md:inline">{title}</span> 
    
    {accentWord && (
      <span class="block md:inline text-transparent bg-clip-text bg-linear-to-r from-primary to-blue-500 dark:from-primary-light dark:to-blue-300 italic">
        {accentWord}
      </span>
    )}
  </h1>

  <div class="w-12 h-1 bg-primary/20 dark:bg-primary/10 mx-auto mb-8 rounded-full"></div>

  <p class="text-lg md:text-xl text-slate-600 dark:text-slate-400 leading-relaxed max-w-2xl mx-auto font-medium transition-colors">
    {description}
  </p>
</div>