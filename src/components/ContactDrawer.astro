---
/* src/components/ContactDrawer.astro */
---

<div
  id="contact-drawer"
  class="fixed inset-0 z-[200] invisible pointer-events-none transition-all duration-300"
  aria-labelledby="drawer-title"
  role="dialog"
  aria-modal="true"
>
  {/* Bakgrunn / Overlay */}
  <div
    id="drawer-overlay"
    class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm opacity-0 transition-opacity duration-300"
  >
  </div>

  {/* Selve skuffen */}
  <div
    id="drawer-panel"
    class="absolute top-0 right-0 w-full max-w-lg h-full bg-white dark:bg-page-dark shadow-2xl translate-x-full transition-transform duration-500 ease-out flex flex-col overflow-hidden border-l border-slate-200 dark:border-slate-800"
  >
    {/* Header */}
    <div
      class="px-8 pt-10 pb-6 flex items-center justify-between relative overflow-hidden"
    >
      {/* Subtilt rutenett i bakgrunnen */}
      <svg
        class="absolute inset-0 h-full w-full pointer-events-none opacity-[0.05] dark:opacity-[0.1]"
        xmlns="http://www.w3.org/2000/svg"
      >
        <pattern
          id="drawer-grid"
          width="30"
          height="30"
          patternUnits="userSpaceOnUse"
        >
          <path
            d="M 30 0 L 0 0 0 30"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            class="text-slate-400 dark:text-blue-500"></path>
        </pattern>
        <rect width="100%" height="100%" fill="url(#drawer-grid)"></rect>
      </svg>

      <div class="relative z-10">
        <h2
          id="drawer-title"
          class="text-3xl font-bold text-slate-900 dark:text-white italic"
        >
          La oss finne <span class="text-primary">takten</span>
        </h2>
        <p class="text-slate-500 dark:text-slate-400 text-sm mt-1">
          Vi svarer vanligvis innen 24 timer.
        </p>
      </div>

      <button
        id="close-drawer"
        class="relative z-10 w-12 h-12 flex items-center justify-center rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-500 hover:bg-primary hover:text-white transition-all duration-300"
        aria-label="Lukk meny"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    {/* Innhold / Skjema */}
    <div class="flex-1 overflow-y-auto px-8 pb-10">
      
      {/* NETLIFY FORM START */}
      <form 
        id="drawer-form" 
        name="contact-drawer" 
        method="POST" 
        data-netlify="true" 
        netlify-honeypot="bot-field"
        class="space-y-6 mt-4"
      >
        {/* Skjulte felt for Netlify-funksjonalitet */}
        <input type="hidden" name="form-name" value="contact-drawer" />
        <p class="hidden">
          <label>Don’t fill this out if you’re human: <input name="bot-field" /></label>
        </p>

        <div class="space-y-2">
          <label
            for="drawer-name"
            class="text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider ml-1"
            >Navn</label
          >
          <input
            type="text"
            id="drawer-name"
            name="name"
            required
            class="w-full px-5 py-4 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/50 transition-all outline-none"
            placeholder="Ditt navn"
          />
        </div>

        <div class="space-y-2">
          <label
            for="drawer-email"
            class="text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider ml-1"
            >E-post</label
          >
          <input
            type="email"
            id="drawer-email"
            name="email"
            required
            class="w-full px-5 py-4 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/50 transition-all outline-none"
            placeholder="din@epost.no"
          />
        </div>

        <div class="space-y-2">
          <label
            for="drawer-subject"
            class="text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider ml-1"
          >
            Hva gjelder det?
          </label>
          <input
            type="text"
            id="drawer-subject"
            name="subject"
            required
            class="w-full px-5 py-4 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/50 transition-all outline-none"
            placeholder="Eks: Ny nettside, teknisk hjelp..."
          />
        </div>

        <div class="space-y-2">
          <label
            for="drawer-message"
            class="text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider ml-1"
            >Melding</label
          >
          <textarea
            id="drawer-message"
            name="message"
            required
            rows="4"
            class="w-full px-5 py-4 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary/50 transition-all outline-none resize-none"
            placeholder="Fortell oss litt om prosjektet..."></textarea>
        </div>

        <button
          type="submit"
          class="w-full py-5 bg-primary text-white font-bold rounded-2xl hover:scale-[1.02] active:scale-[0.98] transition-all shadow-xl shadow-primary/20 flex items-center justify-center gap-3 group"
        >
          Send melding
          <svg
            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
          >
        </button>
      </form>

      {/* Info-seksjon under skjema */}
      <div class="mt-10 space-y-8">
        <div
          class="p-6 rounded-2xl bg-slate-50 dark:bg-slate-800/40 border border-slate-100 dark:border-slate-800/60 relative overflow-hidden group"
        >
          <div
            class="absolute top-0 right-0 w-24 h-24 bg-primary/5 rounded-full blur-2xl -mr-12 -mt-12"
          >
          </div>

          <div class="relative z-10">
            <div class="flex items-center gap-3 mb-3">
              <div
                class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-width="2"
                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <h3
                class="font-bold text-slate-900 dark:text-white text-sm italic"
              >
                Hva skjer nå?
              </h3>
            </div>
            <p
              class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed"
            >
              Når du sender meldingen, tar Åge eller Steinar en personlig titt
              på prosjektet ditt. Vi kommer tilbake til deg innen 24 timer med
              forslag til neste steg – helt uforpliktende.
            </p>
          </div>
        </div>

        {/* Telefon-info */}
        <div class="pt-2 border-t border-slate-100 dark:border-slate-800/60">
          <p class="text-slate-500 dark:text-slate-400 text-xs leading-relaxed">
            Foretrekker du en kjapp prat her og nå? Ring oss direkte på:
            <a
              href="tel:+4741087338"
              class="font-bold text-slate-900 dark:text-white ml-1 hover:text-primary transition-colors"
              >+47 410 87 338</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const setupDrawer = () => {
    const drawer = document.getElementById("contact-drawer");
    const panel = document.getElementById("drawer-panel");
    const overlay = document.getElementById("drawer-overlay");
    const closeBtn = document.getElementById("close-drawer");
    const openButtons = document.querySelectorAll(".open-contact-drawer");

    if (!drawer || !panel || !overlay || !closeBtn) return;

    const openDrawer = (e: Event) => {
      e.preventDefault();
      drawer.classList.remove("invisible", "pointer-events-none");
      setTimeout(() => {
        overlay.classList.add("opacity-100");
        panel.classList.remove("translate-x-full");
      }, 10);
      document.body.style.overflow = "hidden";
    };

    const closeDrawer = () => {
      overlay.classList.remove("opacity-100");
      panel.classList.add("translate-x-full");

      setTimeout(() => {
        drawer.classList.add("invisible", "pointer-events-none");
      }, 500);
      document.body.style.overflow = "";
    };

    openButtons.forEach((btn) => btn.addEventListener("click", openDrawer));
    closeBtn.addEventListener("click", closeDrawer);
    overlay.addEventListener("click", closeDrawer);

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") closeDrawer();
    });
  };

  setupDrawer();
  document.addEventListener("astro:after-swap", setupDrawer);
</script>